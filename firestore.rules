rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Sessions collection - with collaborative sharing support
    match /sessions/{sessionId} {
      // Allow read if:
      // 1. User is authenticated and owns the session, OR
      // 2. Session is marked as shared (for collaborative links), OR
      // 3. User is in the sharedWith array
      allow read: if request.auth != null && 
                     (resource.data.userId == request.auth.uid ||
                      resource.data.isShared == true ||
                      (resource.data.sharedWith != null && 
                       request.auth.uid in resource.data.sharedWith));
      
      // Allow create if user is authenticated and sets themselves as owner
      allow create: if request.auth != null && 
                       request.resource.data.userId == request.auth.uid;
      
      // Allow update if:
      // 1. User owns the session, OR
      // 2. Session is shared and user is authenticated (for collaboration), OR
      // 3. User is in the sharedWith array
      allow update: if request.auth != null && 
                       (resource.data.userId == request.auth.uid ||
                        resource.data.isShared == true ||
                        (resource.data.sharedWith != null && 
                         request.auth.uid in resource.data.sharedWith));
      
      // Allow delete only if user owns the session
      allow delete: if request.auth != null && 
                       resource.data.userId == request.auth.uid;
      
      // Comments subcollection for collaborative annotations
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null && 
                         resource.data.userId == request.auth.uid;
        allow delete: if request.auth != null && 
                         resource.data.userId == request.auth.uid;
      }
    }
  }
}

// IMPORTANT: You need to create a composite index in Firestore for the sessions collection
// Index fields:
// - userId (Ascending)
// - updatedAt (Descending)
//
// To create this index:
// 1. Go to Firebase Console > Firestore Database > Indexes
// 2. Click "Create Index"
// 3. Collection ID: sessions
// 4. Add field: userId (Ascending)
// 5. Add field: updatedAt (Descending)
// 6. Click "Create"
//
// Or click the link in the error message when you first try to query
